@using System.Security.Claims;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    @if (User!.Identity!.IsAuthenticated)
    {
        <h1 class="display-4" style="font-family: Lusitana;">Welcome, @User.Identity.Name!</h1>
        <p style="font-family: Lusitana; font-size: 20px;">Your email: @User.FindFirstValue(ClaimTypes.Email)</p>
        <p style="font-family: Lusitana; font-size: 20px;">Your preferred language: @ViewData["PreferredLanguage"]</p>
    }
    else
    {
        <h1 class="display-4">Welcome, stranger!</h1>
    }
</div>

