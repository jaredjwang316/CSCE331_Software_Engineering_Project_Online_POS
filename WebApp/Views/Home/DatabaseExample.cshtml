@model List<Product>

@if (Model != null && Model.Count > 0) {
    <table class="table">
        <thead>
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Price</th>
                <th>Series</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model) {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Series</td>
                </tr>
            }
        </tbody>
    </table>
} else {
    <p>No products found.</p>
}
