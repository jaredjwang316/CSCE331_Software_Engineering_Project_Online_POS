@using WebApp.Models.UnitOfWork
@using WebApp.Models.ViewModels
@using WebApp.Data
@model CustomizationViewModel

<div class="customization-img-container">
    <img src="@Model.SelectedProduct!.ImgUrl" />
    <p>@Model.SelectedProduct!.Name</p> <!-- Product name (May remove p tag) -->
</div>
@{
    Model.SeriesInformation!.Reverse();
}
@foreach(SeriesInfo seriesInfo in Model.SeriesInformation!) {
    <div class="customization-title" id="@seriesInfo.Name">
        @seriesInfo.Name
    </div>
    <div class="customization-btn-container">
        @foreach(Product product in Model.Products!) {
            if (product.Series == seriesInfo.Name) {
                <button class="customization-btn product" id="@product.Id" series="@product.Series" multiselect="@seriesInfo.MultiSelectable">
                    <p>@product.Name</p>
                </button>
            }
        }
    </div>
}
<button class="add-to-cart-btn" id="@Model.SelectedProduct!.Id">Add to Cart</button>
