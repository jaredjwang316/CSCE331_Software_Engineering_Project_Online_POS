@{
    ViewData["Title"] = "Translation Result";
}

<div class="container">
    <h2>Translation Result</h2>
    <form method="post" action="/GoogleTranslation/Translate">
        <label for="textToTranslate">Text to Translate:</label>
        <input type="text" id="textToTranslate" name="textToTranslate" required />

        <label for="targetLanguage">Target Language:</label>
        <input type="text" id="targetLanguage" name="targetLanguage" required />

        <button type="submit">Translate</button>
    </form>

    @if (ViewBag.OriginalText != null && ViewBag.TranslatedText != null)
    {
        <p>Original Text: @ViewBag.OriginalText</p>
        <p>Translated Text: @ViewBag.TranslatedText</p>
    }
</div>