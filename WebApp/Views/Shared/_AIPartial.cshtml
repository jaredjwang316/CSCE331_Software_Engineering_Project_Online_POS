<link rel="stylesheet" href="~/css/_AIPartial.css" asp-append-version="true"/>
<script type="module" src="~/js/AI.js" asp-append-version="true"></script>

@using WebApp.APIs.GoogleTranslate
@{
    var translator = new GoogleTranslate();
}

<div class="sidebar-image-robot contrast">
    <img class="toggle-AIMenu" src="~/img/robot-logo.png" alt="AI Menu"
        onclick="toggleSidebarAI()"
        onkeydown="if(event.keyCode == 13) toggleSidebarAI()"
        title=@await translator.TranslateText("Need help? Click here to open the AI chat interface")
        tabindex="0"
    />
</div>

<style>
    .sidebar-robot {
        @* position: fixed;
        top: 0;
        right: 0;
        height: 100%;
        margin-top: -16px;
        width: 0;
        z-index: 9000;
        overflow-x: hidden;
        transition: 0.5s;
        padding-top: 60px;
        background-color: #f1f1f1; *@
        position: fixed;
        height: 100%;
        right: 0;
        margin-top: -16px;
        background-color: #f1f1f1;
        border: 2px solid #ccc;
        border-top: none;
        border-right: none;
        z-index: 9999;
        padding-top: 20px;
    }

    .sidebar-closed {
        width: 0;
    }

    .sidebar-open {
        width: 400px;
    }

    .sidebar-output {
        height: 80%;
        width: 100%;
        overflow-y: scroll;
        overflow-x: hidden;
        padding: 0 10px;
    }

    .sidebar-output-text {
        margin: 0;
        padding: 0;
    }

    .sidebar-input {
        position: absolute;
        bottom: 0;
        width: 100%;
        padding: 10px;
        padding-bottom: 70px;
        background-color: #f1f1f1;
    }

    .sidebar-input-text {
        width: 100%;
        padding: 10px;
        margin: 0;
        border: none;
        border-radius: 4px;
        resize: none;
        outline: none;
    }

    .sidebar-input-button {
        float: right;
        padding: 10px;
        margin: 0;
        margin-top: 5px;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;

        background: linear-gradient(to right, #45a049, #317735);
        
        
    }
    .sidebar-input-button img {
        width: 65px;
        height: 20px;
    }

    .sidebar-robot button:hover, .sidebar-robot button:focus {
        background: linear-gradient(to right, #54c259, #3e9442);
    }

    .toggle-AIMenu:hover {
        background-color: #ddd;
    }

    .response-container {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin-bottom: 10px;
        background-color: #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    }
    .response-container img {
        margin: 10px;
        height: 50px;
        width: auto;
    }
    .response-container p {
        color: black;
        padding: 10px;
        margin: 0;
    }

    @* WIth child *@
    .sidebar-output-text > .ai {
        margin-right: 30px;
        background-color: rgb(216, 216, 216);

        @* Limit width to content *@
        max-width: 90%;
        width: fit-content;

        @* Align to left *@
        margin-right: auto;

        align-items: flex-start;
    }
    .sidebar-output-text > .user {
        background-color: white;
        display: flex;
        flex-direction: row-reverse;

        @* Limit width to content *@
        max-width: 90%;
        width: fit-content;

        @* Align to right *@
        margin-left: auto;
        word-break: break-all;

        align-items: flex-start;
    }

    .sidebar-clear-button, .sidebar-TTS-button{
        float: left;
        padding: 10px;
        margin: 0;
        margin-top: 5px;
        border: none;
        border-radius: 4px;
        color: white;
        cursor: pointer;
        margin-right: 5px;

        background: linear-gradient(to right, #45a049, #317735);
    }
    .sidebar-clear-button img {
        height: 25px;
        width: auto;
    }
    .sidebar-TTS-button img {
        height: 25px;
        width: auto;
    }
</style>

@{
    bool sidebarAI = Context.Request.Cookies["sidebarAI"] == "true";
}
<div class="sidebar-robot @(sidebarAI ? "sidebar-open" : "sidebar-closed") contrast">
    @* Output field *@
    <div class="sidebar-output">
        <div class="sidebar-output-text" id="sidebar-output-text">
            @* Messages appear here *@
        </div>
    </div>

    @* Input field *@
    <div class="sidebar-input">
        <input type="text" id="sidebar-input-text" class="sidebar-input-text" placeholder="@await translator.TranslateText("Enter your message here.")"
            onkeydown="if(event.keyCode == 13) sendInput()"/>
        <button class="sidebar-input-button" id="sidebar-input-button" onclick="sendInput()" onkeydown="if(event.keyCode == 13) sendInput()" title="Send message to AI">
            <img src="~/img/send.png" alt="Send" />
        </button>
        <button class="sidebar-clear-button" onclick="clearHistory()" onkeydown="if(event.keyCode == 13) clearHistory()" title="Clear your chat history">
            <img src="~/img/clear-chat.png" alt="Clear" />
        </button>
        @{
            bool tts = Context.Request.Cookies["tts"] == "true";
        }
        <button class="sidebar-TTS-button" on="@(tts ? "true" : "false")" onclick="enableTTS()" onkeydown="if(event.keyCode == 13) enableTTS()" title="Enable/disable text to speech">
            <img src="~/@(tts ? "img/tts.png" : "img/tts-off.png")" alt="Toggle TTS" />
        </button>
    </div>
</div>
